<?xml version="1.0" encoding="UTF-8"?>
<robot name="quadcopter">

   <material name="blue">
      <color rgba="0 0 0.8 1"/>
   </material>

   <material name="red">
      <color rgba="0.8 0 0 1"/>
   </material>

   <link name="base_link">
      <inertial>
         <mass value="1.0"/> <!-- weirdly it does not work if this doesn't have mass -->
         <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
      </inertial>
   </link>
   <link name="center">
      <visual>
         <origin xyz="0 0 0" rpy="0 0 0" />
         <geometry>
            <box size="0.2 0.1 0.04" />
         </geometry>
      </visual>
      <collision>
         <origin xyz="0 0 0" rpy="0 0 0" />
         <geometry>
            <box size="0.2 0.1 0.04" />
         </geometry>
      </collision>
      <inertial>
         <mass value="0.2" />
         <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
   </link>
   <link name="FL">
      <visual>
         <origin xyz="0.16 0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
         <material name="red"/>
      </visual>
      <collision>
         <origin xyz="0.16 0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
      </collision>
      <inertial>
         <mass value="0.2" />
         <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
   </link>
   <link name="FR">
      <visual>
         <origin xyz="0.16 -0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
         <material name="red"/>
      </visual>
      <collision>
         <origin xyz="0.16 -0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
      </collision>
      <inertial>
         <mass value="0.2" />
         <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
   </link>
   <link name="BL">
      <visual>
         <origin xyz="-0.16 0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
         <material name="blue"/>
      </visual>
      <collision>
         <origin xyz="-0.16 0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
      </collision>
      <inertial>
         <mass value="0.2" />
         <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
   </link>
   <link name="BR">
      <visual>
         <origin xyz="-0.16 -0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
         <material name="blue"/>
      </visual>
      <collision>
         <origin xyz="-0.16 -0.13 0" rpy="0 0 0" />
         <geometry>
            <cylinder length="0.03" radius="0.10" />
         </geometry>
      </collision>
      <inertial>
         <mass value="0.2" />
         <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
   </link>

   <!-- Connect parts up -->
   <joint name="base_to_center" type="fixed">
      <parent link="base_link" />
      <child link="center" />
   </joint>
   <joint name="base_to_FL" type="fixed">
      <parent link="base_link" />
      <child link="FL" />
   </joint>
   <joint name="base_to_FR" type="fixed">
      <parent link="base_link" />
      <child link="FR" />
   </joint>
   <joint name="base_to_BL" type="fixed">
      <parent link="base_link" />
      <child link="BL" />
   </joint>
   <joint name="base_to_BR" type="fixed">
      <parent link="base_link" />
      <child link="BR" />
   </joint>
</robot>